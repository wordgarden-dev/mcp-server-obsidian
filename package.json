{
  "name": "@wordgarden-dev/mcp-server-obsidian",
  "version": "0.1.0",
  "description": "MCP server providing declarative CRUD API for Obsidian vaults with first-class kanban board support",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "mcp-server-obsidian": "dist/src/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/src/index.js",
    "test": "node --test dist/**/*.test.js",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "obsidian",
    "kanban",
    "markdown"
  ],
  "author": "wordgarden-dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wordgarden-dev/mcp-server-obsidian.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "gray-matter": "^4.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
